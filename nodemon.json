{
  "restartable": "rs",
  "ignore": [
    ".git",
    ".jpg",
    ".txt",
    "node_modules/**/node_modules",
    "public/data/*",
    "data/*",
    "colorsearch/*"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "test/fixtures/",
    "test/samples/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}
